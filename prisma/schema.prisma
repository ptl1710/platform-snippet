generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(cuid())
  email      String    @unique
  password   String
  username   String    @unique
  name       String?
  avatarUrl  String?
  createdAt  DateTime  @default(now())
  snippets   Snippet[]
}

model Snippet {
  id          String    @id @default(cuid())
  title       String
  description String?
  code        String    @db.Text 
  language    String
  topics      Tag[]     @relation("SnippetTags")
  author      User      @relation(fields: [authorId], references: [id])
  authorId    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  visibility  String    @default("public")
}

model Tag {
  id       String    @id @default(cuid())
  name     String    @unique
  slug     String    @unique
  snippets Snippet[] @relation("SnippetTags")
}
